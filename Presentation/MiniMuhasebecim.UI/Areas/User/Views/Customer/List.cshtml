@model IEnumerable<CustomerDto>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birtdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="tr-@item.Account.CustomerId">
                <td>
                    @Html.DisplayFor(modelItem => item.Account.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birtdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Role)
                </td>
                <td>
                    <a href="@Url.Action("List","CustomerImage",new{Area="User",productId = item.Account.CustomerId})" class="nav-link">
                        <i class="far fa-image"></i>
                        <p>
                            Resim Yönetimi
                        </p>
                    </a>
                    @Html.ActionLink("Güncelle", "#","#", new { Area="User", id=item.Account.CustomerId }, new{@class="btn btn-success"})
                    @*<a href="#" data-id="@item.Account.CustomerId" class="btn btn-danger btnDelete" style="width:90px;">Sil</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


