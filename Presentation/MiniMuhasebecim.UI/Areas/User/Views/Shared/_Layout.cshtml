                                <a href="#" class="nav-link active">
                                    <i class="nav-icon far fa-plus-square"></i>
                                    <p>
                                        Kategori İşlemleri
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","Category")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Yeni Kategori
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("List","Category")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Kategori Listesi
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu-closed">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon far fa-plus-square"></i>
                                    <p>
                                        Açık Hesap İşlemleri
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","Debt")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Açık Hesap Hareketi Ekle
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("List","Debt")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Açık Hesap Hareketleri
                                            </p>
                                        </a>
                                    </li>

                                </ul>
                            </li>
                            <li class="nav-item menu-closed">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon far fa-plus-square"></i>
                                    <p>
                                        Gün Sonu İşlemleri
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","Income")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Günlük Kazanç Ekleme
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("List","Income")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Gün Sonu Bilgileri Listeleme
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu-closed">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon far fa-plus-square"></i>
                                    <p>
                                        Sipariş İşlemleri
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","Order")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Sipariş Ekleme
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("List","Order")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Siparişleri Listeleme
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu-closed">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon far fa-plus-square"></i>
                                    <p>
                                        Ödeme İşlemleri
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","Payment")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Ödeme Ekleme
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("List","Payment")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Ödeme İşlemleri Listeleme
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu-closed">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon far fa-plus-square"></i>
                                    <p>
                                        Tedarikçi İşlemleri
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","Wholesaler")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Tedarikçi Ekleme
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("List","Wholesaler")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Tedarikçileri Listeleme
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item menu-closed">
                                <a href="#" class="nav-link active">
                                    <i class="nav-icon far fa-plus-square"></i>
                                    <p>
                                        Kullanıcı Bilgileri (Deneme Amaçlı Asıl Yeri Yuarıda)
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("customerhome","Customer")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Kullanıcı Bilgileri
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("1","List","Customer")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Kullanıcı Bilgileri (Resim Eklemeli)
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Create","CustomerImage")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Kullanıcı Resim Ekleme
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("List","CustomerImage")" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>
                                                Kullanıcı Resim Bilgileri (Resim Eklemeli)
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <h1>@ViewBag.Header</h1>
                            </div>
                        </div>
                    </div><!-- /.container-fluid -->
                </section>

                <!-- Main content -->
                <section class="content" >

                    <!-- Default box -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">@ViewBag.Title</h3>


                        </div>
                        <div class="card-body">
                            @{
                                if (TempData["success"] != null)
                                {
                                    <div class="alert alert-success" role="alert">
                                        @TempData["success"]
                                    </div>
                                }
                                else if (TempData["error"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @TempData["error"]
                                    </div>
                                }
                            }
                            @RenderBody()
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                        </div>
                        <!-- /.card-footer-->
                    </div>
                    <!-- /.card -->

                </section>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
        </div>
        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 3.2.0
            </div>
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/admin/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/admin/dist/js/demo.js"></script>

    @{
        await RenderSectionAsync("Scripts", false);
    }
</body>
</html>
