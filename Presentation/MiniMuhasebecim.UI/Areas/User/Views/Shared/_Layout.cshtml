                    <span style="text-align:right">Mini <br />Muhasebecime <br />Hoşgeldiniz</span>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/admin/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            @*Buraya kullanıcıya ait Id alabileceğim bir link koymam gerekiyor*@
                            <a href="/user/customer/customerHome" class="d-block">
                                <i class='far fa-id-card' style='font-size:24px'>  Bilgilerim</i>
                            </a>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
